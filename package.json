{
  "name": "reservation-boss",
  "version": "1.0.0",
  "description": "Reservation Boss - Multi-platform resource reservation system",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "dev:web": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=packages/web",
    "start": "npm run start --workspace=packages/web",
    "start:web": "npm run start --workspace=packages/web",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "install:all": "npm install"
  },
  "keywords": [
    "reservation",
    "parking",
    "resource-management",
    "monorepo",
    "nextjs"
  ],
  "author": "Francisco Foyain <fjfoyain@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  }
}
